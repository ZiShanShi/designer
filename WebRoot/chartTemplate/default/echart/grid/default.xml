<?xml version="1.0" encoding="UTF-8" ?>
<grid>

    <id></id>
    <show>true</show>
    <zlevel>0</zlevel>
    <z>2</z>
    <left>10%</left>
    <top>60</top>
    <right>10%</right>
    <bottom>60</bottom>
    <width>auto</width>
    <height>auto</height>

    <containLabel remark="坐标轴的刻度标签">false</containLabel>

    <backgroundColor>transparent</backgroundColor>
    <borderColor>#ccc</borderColor>
    <borderWidth>0</borderWidth>
    <shadowColor></shadowColor>
    <shadowBlur></shadowBlur>
    <shadowOffsetX>0</shadowOffsetX>
    <shadowOffsetY>0</shadowOffsetY>

    <tooltip remark="本坐标系特定的 tooltip 设定。">
        <show>true</show>
        <trigger remark="item,axis,none">item</trigger>
        <axisPointer type="file" remark="同axispointer">

        </axisPointer>
        <position remark="Array,Function,inside,top,left,right,bottom"></position>
        <formatter>$formatter</formatter>
        <backgroundColor>rgba(50,50,50,0.7)</backgroundColor>
        <borderColor>#333</borderColor>
        <borderWidth>0</borderWidth>

        <textStyle>
            <color>#fff</color>
            <fontStyle>normal</fontStyle>
            <fontWeight>normal</fontWeight>
            <fontFamliy>Courier New</fontFamliy>
            <fontSize>14</fontSize>
            <lineHeight></lineHeight>
            <width></width>
            <height></height>
            <textBorderColor>transparent</textBorderColor>
            <textBorderWidth>0</textBorderWidth>
            <textShadowColor>transparent</textShadowColor>
            <textShadowBlur></textShadowBlur>
            <textShadowOffsetX>0</textShadowOffsetX>
            <textShadowOffsetY>0</textShadowOffsetY>
        </textStyle>
        <extraCssText remark="额外附加到浮层的 css 样式">$extraCssText</extraCssText>
    </tooltip>
</grid>